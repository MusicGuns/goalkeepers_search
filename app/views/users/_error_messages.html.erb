<% if resource.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <div id="error_explanation">
      <h2>
        <%= "Найдено #{resource.errors.count} ошибок" %>
      </h2>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <button type="button" class="btn-close alert-dismissible" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
