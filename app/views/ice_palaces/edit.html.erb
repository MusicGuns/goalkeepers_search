<h1>Редактирование дворца <%= @ice_palace.title %></h1>

<%= render "errors/error_messages", resource: @ice_palace %>

<div class="col-md-7 col-lg-5 mt-5">
  <div class="row g-3">
    <%= form_with model: @ice_palace do |f| %>
      <div class="col-sm-12">
        <%= f.label :title, "Адрес", class: 'form-label mb-1' %>
        <%= f.text_field :title, class: "form-control mb-3" %>
      </div>

      <div class="col-sm-12">
        <%= f.label :adress, "Адрес", class: 'form-label mb-1' %>
        <%= f.text_field :adress, class: "form-control mb-3" %>
      </div>

      <div class="col-sm-12">
        <%= f.label :description, "Описание", class: 'form-label mb-1' %>
        <%= f.text_area :description, autofocus: true, class: "form-control mb-3" %>
      </div>

      <div class="col-sm-12">
        <%= f.label :cords, "Координаты объекта (например 55.55-123.12)", class: 'form-label mb-1' %>
        <%= f.text_field :cords, autofocus: true, class: "form-control mb-3" %>
      </div>

      <div class="col-12">
        <%= f.label :photo, "Фото", class: "form-label mb-1 col-lg-12" %>
        <div class="col-12 mb-1">
          <% if @ice_palace.photo.attached? %>
            <%= image_tag(@ice_palace.photo, size: "100x100", class: "rounded-3")%>
          <% end %>  
        </div>
        <%= f.file_field :avatar, class: "form-control  mb-3"%>
      </div>

      <div class="actions">
        <%= f.submit "Подтвердить",class: "btn btn-primary mb-3" %>
      </div>
    <% end %>
  </div>
</div>

<div class="col-6 ">
  <%= button_to "Удалить", ice_palace_path(ice_palace: @ice_palace), method: :delete, data: {turbo: false}, class: "btn btn-danger"%>
</div>


<div>
  <%= link_to "Отменить", :back %>
</div>