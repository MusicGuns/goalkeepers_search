<div class="black">
  <article class="postcard light blue">
    <a class="postcard__img_link" href="#">
      <img class="postcard__img" src="<%= image_path("ice_palace#{@ice_palace.id}", skip_pipeline: true)%>.jpg" alt="Image Title" />
    </a>
    <div class="postcard__text black">
      <h1 class=" blue"><%= @ice_palace.title %></h1>
      <div class="postcard__title">
                <small><%= link_to @ice_palace.adress,"https://yandex.ru/maps/?text=#{@ice_palace.adress}" %></small>
      </div>
      <div class="postcard__bar"></div>
      <div class="postcard__preview-txt"><%= @ice_palace.description %> </div>
      <div>
      <% if current_user.is_goalkeeper? %>
        <% if user_subscriber? %>
          <%= button_to 'Отписаться', ice_palace_subscription_path(@ice_palace), method: :delete, class: "btn btn-primary", data: { turbo: false } %>
        <% else %>
          <%= button_to 'Подписаться', ice_palace_subscriptions_path(@ice_palace), class: "btn btn-primary", data: { turbo: false } %>
        <% end %>
      <% end %>
      </div>
      <div class="mt-2">
        <% if current_user&.is_admin %>
          <%= link_to 'Редактировать', edit_ice_palace_path(@ice_palace), class: "btn btn-primary text-white", data: { turbo: false } %>
        <% end %>
      </div>
    </div>
  </article>
</div>
  <div class="container">
    <div class="row">
      <% unless @ice_palace.subscribers.empty?%>
        <h2 class="pt-5">Желающие</h2>
        <hr>
        <div class="col-lg-9">
          <% @ice_palace.subscribers.each do |user| %>
              <%= render user %>
          <% end %>
      <% end %>
      </div>
      <div class="col-lg-3 float-end">
        <div style="height: 240px">
          <script type="text/javascript" charset="utf-8" async src="<%= @ice_palace.map_script %>"></script>
        </div>
      </div>
    </div>
  </div>